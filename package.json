{
  "name": "alwatr-nanolib",
  "description": "Necessary library for all ECMAScript (JavaScript/TypeScript) projects.",
  "repository": "https://github.com/Alwatr/nanolib",
  "author": "S. Ali Mihandoost <ali.mihandoost@gmail.com> (https://ali.mihandoost.com)",
  "license": "MIT",
  "type": "module",
  "private": true,
  "engines": {
    "node": ">=18.16.0",
    "yarn": ">=4.0.0"
  },
  "workspaces": [
    "packages/*"
  ],
  "prettier": "@alwatr/prettier-config",
  "scripts": {
    "b": "yarn run build",
    "t": "yarn run test",
    "w": "yarn run watch",
    "c": "yarn run clean",
    "cb": "yarn run clean && yarn run build",
    "l": "yarn run lint",
    "f": "yarn run format",
    "rl": "yarn install && yarn run pull && yarn run clean && yarn run build && yarn run lint && yarn run test && yarn run release",
    "upd": "yarn set version latest; yarn up '*'; yarn up '*' -R; yarn dlx @yarnpkg/sdks vscode; yarn dedupe",
    "lint": "eslint . --config .eslintrc.json --ext .ts",
    "build": "lerna run build",
    "test": "NODE_OPTIONS=\"$NODE_OPTIONS --enable-source-maps --experimental-vm-modules\" jest --verbose",
    "watch": "lerna run --parallel watch",
    "format": "yarn run format:prettier && yarn run format:eslint",
    "format:eslint": "yarn run lint --fix",
    "format:prettier": "prettier . --ignore-path .gitignore --write",
    "clean": "git add -v . && git clean -d -x -f --exclude=node_modules --exclude='*.env' --exclude=_data --exclude='.pnp*' --exclude=.yarn",
    "pull": "git pull",
    "release": "lerna version",
    "publish": "lerna publish from-package"
  },
  "devDependencies": {
    "@alwatr/eslint-config": "workspace:^",
    "@alwatr/prettier-config": "workspace:^",
    "@lerna-lite/changed": "^3.2.1",
    "@lerna-lite/cli": "^3.2.1",
    "@lerna-lite/diff": "^3.2.1",
    "@lerna-lite/exec": "^3.2.1",
    "@lerna-lite/publish": "^3.2.1",
    "@lerna-lite/run": "^3.2.1",
    "@lerna-lite/version": "^3.2.1",
    "@types/jest": "^29.5.12",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "conventional-changelog-conventionalcommits": "^7.0.2",
    "eslint": "^8.56.0",
    "eslint-import-resolver-typescript": "^3.6.1",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-require-extensions": "^0.1.3",
    "jest": "^29.7.0",
    "prettier": "^3.2.5",
    "typescript": "^5.3.3"
  },
  "packageManager": "yarn@4.1.0"
}
